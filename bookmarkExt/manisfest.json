{
	"manifest_version": 2,
	"name": "Bookmark Extension Demo",
	"description": "Manipulates your chrome bookmarks",
	"version": "1.0.2",
	"browser_action": {
		"default_icon": "img_on.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"http://*/*",
		"https://*/*",
		"storage",
		"bookmarks"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*/*", "file:///*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	]
}
